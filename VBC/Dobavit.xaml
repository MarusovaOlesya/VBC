<Page x:Class="VBC.Dobavit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VBC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dobavit" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
            <TextBox Height="30" Width="300" Margin="5" HorizontalAlignment="Left"/>
            <Button Content="Поиск" Foreground="White" Background="DarkRed" Height="30" Margin="5" Width="100" />
            <Button Content="Добавить" Foreground="White" Background="DarkRed" Height="30" Margin="5" Width="100" Name="DobavitClick" Click="DobavitClick_Click"/>
        </StackPanel>
        <DataGrid Grid.Row="1"/>
    </Grid>
</Page>
